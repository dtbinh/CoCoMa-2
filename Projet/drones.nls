; Behavior sutructure : list : name run-fuction priority optional1 optional2 ....

to-report opt1 [ b ]
  
  report item 3 b
  
end

to-report opt2 [ b ]
  
  report item 4 b
  
end

to-report opt3 [ b ]
  
  report item 5 b
  
end

to set-opt [index value]
  
  set behavior replace-item (2 + index) behavior value
  
end

to-report priority [ b ]
  
  report item 2 b
  
end


